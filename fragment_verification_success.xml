<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_16sdp"
    android:background="@color/colorPrimary"
    tools:context=".ui.commonui.fragment.VerificationSuccessFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"
        android:src="@drawable/ic_success"
        android:scaleType="fitCenter"
        android:layout_marginTop="@dimen/_16sdp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Large_Text_Bold_Style"
        android:text="@string/congratulation"
        android:layout_marginTop="@dimen/_24sdp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Small_Text_Normal_Style"
        android:layout_marginTop="@dimen/_16sdp"
        android:text="@string/verification_success_msg"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/goto_home_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goto_home"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@color/colorAccent"
        android:backgroundTint="@color/colorAccent"
        style="@style/Small_Text_Normal_Style"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>