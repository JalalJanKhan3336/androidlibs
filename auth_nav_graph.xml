<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_nav_graph"
    app:startDestination="@id/customerLoginFragment">

    <fragment
        android:id="@+id/customerLoginFragment"
        android:name="com.thesoftparrot.delivery.tcsapp.ui.customer.auth.fragment.CustomerLoginFragment"
        android:label="fragment_customer_login"
        tools:layout="@layout/fragment_customer_login" >
        <action
            android:id="@+id/action_customerLoginFragment_to_verifyCodeFragment"
            app:destination="@id/verifyCodeFragment"
            app:enterAnim="@android:anim/slide_out_right"
            app:exitAnim="@android:anim/slide_in_left" />
    </fragment>
    <fragment
        android:id="@+id/verifyCodeFragment"
        android:name="com.thesoftparrot.delivery.tcsapp.ui.commonui.fragment.VerifyCodeFragment"
        android:label="fragment_verify_code"
        tools:layout="@layout/fragment_verify_code" >
        <argument
            android:name="phone"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_verifyCodeFragment_to_verificationSuccessFragment"
            app:destination="@id/verificationSuccessFragment"
            app:enterAnim="@android:anim/slide_out_right"
            app:exitAnim="@android:anim/slide_in_left" />
    </fragment>
    <fragment
        android:id="@+id/verificationSuccessFragment"
        android:name="com.thesoftparrot.delivery.tcsapp.ui.commonui.fragment.VerificationSuccessFragment"
        android:label="fragment_verification_success"
        tools:layout="@layout/fragment_verification_success" />
</navigation>